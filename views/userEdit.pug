doctype html
html
  head
    meta(charset="UTF-8", name="viewport", content="width=device-width, initial-scale=1.0")
    title Profile Page
    link(rel="stylesheet", href="./mvp/css")
    script(src="/creds.js")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css",integrity="sha256-9mbkOfVho3ZPXfM7W8sV2SndrGDuh7wuyLjtsWeTI1Q=",crossorigin="anonymous")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css") 
    script(src="https://code.jquery.com/jquery-3.5.1.min.js",integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=", crossorigin="anonymous")
    link(rel="stylesheet", id="theme", href="light-theme.css")
    link(rel="stylesheet", href="styles.css")

  body
    .ui.inverted.pointing.menu.stackable
      a.item.header#about(href="/") Home
      a.item#index_plasma(href="/index_plasma") Dashboard
      a.item#map(href="/map") Track a Bed
      a.item#plasma_bank(href="/plasma_bank") Plasma Bank
      a.item#log-in(href="/login") CareNet
      a.item#technology(href="/AboutProject") About
      .ui.fluid.inverted.two.column.centered.grid.menu
        span.fluid.item#status CareQuest
      a.item(href="/beta_login")
        i.map.icon
      a.item(href="/faq")
        i.info.icon
      a.item#theme-toggle
        i.moon.icon
      .hamburger
        span.hamburger-bun
        span.hamburger-patty
        span.hamburger-bun
    .ui.container
      h3.header Note you're currently editing User : #{(user.displayName)?user.displayName:user.email}
      .ui.segment
        .ui.form
          .ui.dividing.header Basic Authentication Info
          .meta User UID:
            span#uid #{user.uid}
            span.right.floated.ui.button.blue.tiny Edit
          br
          .fields
            .field
              label Display Name
              input#displayName(type="text", name="displayName", value=`${(user.displayName)?user.displayName:''}` readonly)
            .field
              label Email
              input#email(type="text", name="email", value=`${user.email}` readonly)
            .field
              label Phone Number
              input#phoneNumber(text="text",name ="phoneNumber" ,value = `${(user.phoneNumber)?user.phoneNumber:''}` readonly)
            .field
              label Email Verification Status
              input#emailVerified(type="text",name="emailVerified" , value = `${user.emailVerified}` readonly)
            .field
              label Disable Status
              input#disabled(type="text",name="disabled" , value = `${user.disabled}` readonly)
          .ui.button.green Submit
          .ui.button.red Cancel
      .ui.segment
        .ui.form
          .ui.dividing.header Hospital Details
          .meta
            span.right.floated.ui.button.blue.tiny Edit
          .fields
            .field
              label OCR Status
              input#id_verif(type="text",name="id_verf" readonly)
            .field
              label Hospital Id
              input#object_id(type="text",name="object_id" readonly)
            .field
              label Creation Time
              input#time(type="text",name="time" readonly)
          .ui.button.green Submit
          .ui.button.red Cancel
      .ui.button.green Get More Info on Hospital
      .ui.segment

      




  script(src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.js")
  script(src="/design.js")
  script(src="/js/ajax_helper.js")
  script.
      $(document).ready(function(){
      var search_query = {
        uid : $("#uid").text()
      }
      $.ajax({
        type : "GET",
        contentType: "application/json",
        url : "/admin/role",
        data : search_query,
        dataType:"json",
        success: function(result){
          $('#id_verif').val(result.id_verif);
          $('#object_id').val(result.object_id);
          $('#time').val(result.time);
          console.log("Success: ", result);
        },
        error : function(e) {
          console.log("ERROR: ", e);
        }
      });
      });
    
